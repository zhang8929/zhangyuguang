.about-con{
  padding-top:40rpx; 
  background-color: white;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 8rpx 0 rgba(220,238,255,0.50);
  border-radius: 16rpx;
}
.version{
  font-size: 24rpx;
  color: #4B596C;
  letter-spacing: 0;
  text-align: center;
  margin-bottom: 20rpx;
}
.version text{
  font-size: 24rpx;
  color: #128DE9;
  letter-spacing: 0;
  line-height: 34rpx;
}
.aubout-text{
  padding: 0 72rpx 72rpx;
  font-size: 28rpx;
  color: #606D7D;
  text-indent: 2em;
  line-height: 40rpx;
}

.footbar{
  padding: 20rpx 0;
  text-align: center;
  background-color: white;
  box-shadow: 0 4rpx 8rpx 0 rgba(220,238,255,0.50);
  border-radius: 16rpx;
}

.footbar-btn{
  color: #1E57D6;
  margin-bottom: 20rpx;
  display: inline-block;
  margin: 0 auto;
}
.feed-jump{
  background-color: transparent;
}
.contact{
  color: #606D7D;
}
.footbar-btn,.contact{
  font-size: 32rpx;
  letter-spacing: 0;
}

.copyright{
  display: flex;
  flex-direction: column;
  text-align: center;
  font-size: 24rpx;
  color: #A4A4A4;
  letter-spacing: 0;
  padding-bottom: 10rpx;
}