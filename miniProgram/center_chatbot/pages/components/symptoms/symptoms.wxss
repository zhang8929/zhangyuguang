@import '../../loading/loading.wxss';
.head{
  padding: 6rpx 30rpx 0;
  margin-bottom: 40rpx;
}
.head-con{
  background-color: #28B9A5;
  border-radius: 12rpx 12rpx 0 0;
  padding: 40rpx 0 40rpx 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.head-con .name{
  color: white;
  font-size: 48rpx;
  letter-spacing: 0;
  margin-right: 40rpx;
  line-height: 66rpx;
}
.head-con .focuson{
  background: #219A89;
  border: 2rpx solid #FFFFFF;
  border-radius: 33rpx;
  padding: 8rpx 20rpx;
  font-size: 24rpx;
  color: white
}
.sym-con{
  padding: 0 40rpx;
}
.sym-item{
  position: relative;
  padding-left: 32rpx;
  line-height: 44rpx;
  margin-bottom:40rpx; 
  color: #101010;
  letter-spacing: 3rpx;
  font-size: 24rpx;
}
.sym-item .sym-item-title{
  color: #28B9A5;
  font-weight: bold;
  font-size: 30rpx;
}
.sym-item::after{
  content: "";
  position: absolute;
  width: 12rpx;
  height:12rpx;
  border-radius: 50%;
  background-color:#28B9A5;
  top: 22rpx;
  transform: translateY(-50%);
  left: 0;
}

.footerBar{
  padding: 0 30rpx;
  margin-bottom: 24rpx;
}
.footerBar-con{
  background-color: #28B9A5;
  display: flex;
  flex-direction: row;
  justify-content: center;
  font-size: 24rpx;
  color: white;
  letter-spacing: 3rpx;
  padding: 20rpx 0;
  border-radius:0 0 12rpx 12rpx;
}
.praise,.evaluation{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.footerBar image{
  width: 60rpx;
  height: 60rpx;
}
.praise{
  margin-right: 200rpx;
}
/* 加载动画 */
.loadingBox{
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: white;
  top: 0;
  left: 0;
  z-index: 999;
}