/* pages/components/illness/illness.wxss */
@import '../../loading/loading.wxss';
page{
  background-color: #f5f5f5;
}
.head{
  padding: 20rpx 0 24rpx;
}
.name{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 16rpx 60rpx 64rpx;
  background-color: white;
  justify-content: center;
}
.title{
  font-size: 40rpx;
  color:#000;
  display: inline-block;
  /* margin-right: 40rpx; */
}
.focuson{
  font-size: 28rpx;
  color: #fff;
  background-color: #7B52FF;
  padding: 8rpx 22rpx;
  border-radius: 33rpx;
}
.head_info-btn{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 0 106rpx 20rpx;
  background-color: white
}
.info_btn-item{
  text-align: center;
  font-size: 28rpx;
  color: #000;
  min-width: 120rpx;
}
.info_btn-item.active{
  color: #3C2DCB;
  position: relative;
}
.info_btn-item.active::after{
  content: "";
  position: absolute;
  width: 100%;
  height: 2rpx;
  left: 0;
  bottom: -19rpx;
  background-color: #3C2DCB;
}
.info_btn-item image{
  width: 48rpx;
  height: 48rpx;
  display: block;
  margin: 0 auto 10rpx;
}
.head_info-box{
  overflow: hidden;
}
.head_box-con{
  display: flex;
  flex-direction: row;
  width: 100%;
  /* transition: transform .3s; */
  /* transform: ; */
  
}
.box_con-flex{
  width: 100%;
  min-width: 100%;
  /* margin: 0 auto; */
  
  overflow-y: scroll;
}
.box_con-item{
  padding:36rpx 32rpx 48rpx;
  background-color: white;
  margin-bottom: 24rpx;
}
.box_con-title{
  font-size: 48rpx;
  padding-bottom:46rpx;
  border-bottom: 2rpx solid #E3E7EA;
  margin-bottom: 54rpx;
}
.box_con-title text{
  position: relative;
  line-height: 66rpx;
  color: #252525;
}
.box_con-title text::after{
  position: absolute;
  content: "";
  width: 100%;
  height: 8rpx;
  background-color:  #D9DEE2;
  bottom:-47rpx;
  left: 0;
}
.box_con-info{
  font-size: 32rpx;
  color: #535b5e;
  letter-spacing: 3rpx;
  line-height: 60rpx;
  margin-bottom: 120rpx;
}
.instructions-title{
  font-size: 36rpx;
  color: #151517;
  letter-spacing: 3rpx;
  margin-bottom: 60rpx;
}
.instructions-item{
  position: relative;
  padding-left: 32rpx;
  line-height: 60rpx;
  margin-bottom:60rpx; 
  font-size: 30rpx;
  color: #535b5e;
  letter-spacing: 3rpx;
}
.instructions-item text{
  display: block
}
.instructions-item .instructions-item-title{
  color: #3F4D61 ;
  font-weight: bold;
  font-size: 36rpx;
  margin-bottom: 24rpx;
  line-height: 44rpx;
}
.instructions-item::after{
  content: "";
  position: absolute;
  width: 12rpx;
  height:12rpx;
  border-radius: 6rpx;
  background-color:#282829;
  top: 25rpx;
  transform: translateY(-50%);
  left: 0;
}
.instructions-item:last-child{
  margin-bottom: 0;
}
.footerBar{
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: center;
  font-size: 24rpx;
  color: #3f4d61;
  letter-spacing: 3rpx;
  padding: 24rpx 0;
}
.praise,.evaluation{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.footerBar image{
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
}
.praise{
  margin-right: 200rpx;
}
/* 加载动画 */
.loadingBox{
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: white;
  top: 0;
  left: 0;
  z-index: 999;
}