/* pages/components/drugInfo/drugInfo.wxss */
@import '../../loading/loading.wxss';
page{
  background-color: #f9f9f9;
}
.head image{
  width: 100%;
  border-bottom:2rpx solid #E5E9F2;
}
.body{
  padding: 64rpx 24rpx 0;
}
.title{
  font-size: 40rpx;
  color: #252525;
  line-height: 56rpx;
  margin-bottom: 8rpx;
  font-weight: bold;
}
/* .tags{
  margin-bottom: 48rpx;
} */
.tags text{
  border: 2rpx solid #597EF7;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #597EF7;
  display: inline-block;
  padding: 16rpx 32rpx;
  margin-right: 20rpx;
}
.tags text.active{
  background-color: #597EF7;
  color: white;
}
.info-list{
  padding: 48rpx 0;
}
.info-item{
  margin-bottom: 48rpx;
}
.info-item:last-child{
  margin-bottom: 62rpx;
}
.dot{
  width: 24rpx;
  height: 24rpx;
  background-color: #F0F5FF;
  position: relative;
  border-radius: 12rpx;
  display: inline-block;
  margin-right: 16rpx;
}
.dot::after{
  position: absolute;
  content: "";
  width: 16rpx;
  height: 16rpx;
  background-color: #D6E4FF;
  border-radius: 8rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.item-title{
  font-size: 32rpx;
  color: #282828;
  margin-bottom: 16rpx;
}
.item-con{
  padding: 0 40rpx;
  font-size: 28rpx;
  color: #4B596C;
}
/* 加载动画 */
.loadingBox{
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: white;
  top: 0;
  left: 0;
  z-index: 999
}