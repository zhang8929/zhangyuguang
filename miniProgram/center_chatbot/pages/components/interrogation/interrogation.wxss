/* pages/components/interrogation/interrogation.wxss */
@import '../../loading/loading.wxss';
page{
  background-color: #f5f7ff;
}
.head{
  background-color: #4865FF;
  margin-bottom: 126rpx;
}
.navBar{
  display: flex;
  flex-direction:row; 
  justify-content: space-between;
  padding:0 72rpx; 
  box-shadow: 0 4rpx 8rpx 0 #A9B3FF;
  position: relative;
  z-index: 999;
}
.nav-item{
  font-size: 32rpx;
  color: #FFFFFF;
  padding: 32rpx 0;
  position: relative;
}
.nav-item.active::after{
  content: "";
  position: absolute;
  width: 60rpx;
  height: 6rpx;
  background-color: white;
  left: 50%;
  bottom: 16rpx;
  transform: translateX(-50%);
}
.askBox{
  width: 100%;
  height: 104rpx;
  /* padding: 0 32rpx; */
  box-sizing: border-box;
  position: relative;
  z-index: 2;
}
.askNum{
  background-color: white;
  padding: 96rpx 0 40rpx 40rpx;
  position: absolute;
  width: 666rpx;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  font-size: 40rpx;
  line-height: 56rpx;
  /* box-shadow: 0 4rpx 16rpx -4rpx #9DD4FD; */
  box-shadow: 0 4rpx 16px -4rpx #DCEEFF;
  border-radius: 0 0 16rpx 16rpx;
}

.askList{
  padding: 0 32rpx;
}

.default-page{
  width: 100%;
  position: relative;
  height: 730rpx;
}
.default-page image{
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.default-show-info{
  position: absolute;
  display: flex;
  flex-direction: column;
  width: 100%;
  text-align: center;
  bottom: 50rpx;
  left: 0;
}
.default-h2{
  font-size: 40rpx;
  color: #454545;
  margin-bottom: 32rpx;
}
.default-p{
  font-size:28rpx;
  color: #CCCCCC;
}
.ask-title{
  font-size: 32rpx;
  color: #070707;
  font-weight: bold;
  margin-bottom: 36rpx;
}
.ask-item{
  background: #FFFFFF;
  box-shadow: 0 6px 10rpx 0 rgba(220,238,255,0.50);
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}
.ask-item-title{
  display: flex;
  flex-direction: row;
  padding: 32rpx 72rpx 32rpx 40rpx;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  font-size: 32rpx;
  color: #3E4DC1;
}
.ask-item-title image{
  width: 20rpx;
  height: 20rpx;
}
.ask-item-con{
  padding: 32rpx 40rpx; 
  font-size: 32rpx;
  color: #0D0D0D;
}
/* 加载动画 */
.loadingBox{
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: white;
  top: 0;
  left: 0;
  z-index: 999;
}
