/* pages/components/cureInfo/cureInfo.wxss */
.head{
  padding: 20rpx 0 24rpx;
}
.name{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 16rpx 60rpx 64rpx;
  background-color: white;
  justify-content: center;
}
.title{
  font-size: 40rpx;
  color:#000;
  display: inline-block;
}
.head_info-box{
  padding: 0 48rpx;
}
.box_con-title{
  font-size: 40rpx;
  color: #252525;
  padding-bottom:16rpx;
  border-bottom: 2rpx solid #E3E7EA;
  margin-bottom: 24rpx;
}
.box_con-title text{
  position: relative;
  line-height: 66rpx;
  color: #252525;
}
.box_con-title text::after{
  position: absolute;
  content: "";
  width: 100%;
  height: 8rpx;
  background-color:  #D9DEE2;
  bottom:-26rpx;
  left: 0;
}
.box_con-body{
  font-size: 32rpx;
  color: #3F4D61;
  letter-spacing: 3rpx;
  line-height: 60rpx;
  padding-bottom: 20rpx;
}
