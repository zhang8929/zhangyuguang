/**index.wxss**/
page{
  min-height: 100%;
}
.login-box{
  width: 100%;
  min-height: 100%;
}
.userinfo {
  /* position: absolute; */
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 72rpx;
}
.logo_box{
  display: flex;
  flex-direction: column;
  text-align: center;
  margin-bottom: 72rpx;
}
.logo_box .logo{
  width: 192rpx;
  height: 226rpx;
}
.logo_box{
  font-size: 40rpx;
  color: white;
}
.login-bg{
  width: 500rpx;
  height: 483.4rpx;
  margin: 0 auto 96.62rpx;
}
.login-bg image{
  width: 100%;
  height: 100%;
}
.login_btn,button.login_btn[disabled]{
  font-size: 48rpx;
  color: #3E4DC1;
  width: 560rpx;
  line-height: 66rpx;
  padding: 17rpx 0;
  text-align: center;
  outline: none;
  box-shadow: 0 4rpx 16rpx -4rpx #96B5FF;
  border-radius: 60rpx;
  border: none;
  background-color: white;
} 
.login_btn::after,button.login_btn[disabled]::after{
  border: none;
}